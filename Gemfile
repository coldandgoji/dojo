##
# Gemfile
#
# This is the base Gemfile file for Ronin.
##

# Source
source 'https://rubygems.org'

# Ruby
ruby "2.2.0"

# Middleman Core | Static site generator
gem "middleman-core", "3.3.12"

# Middleman Livereload | Auto-refresh on change
gem "middleman-livereload", "3.4.2"

# Middleman S3 Sync | Allows sync between middleman build and Amazon S3
gem "middleman-s3_sync", "3.0.46"

# SASS | Syntactically Awesome Stylesheets
gem "sass", "3.4.13"

# Uglify | Javascript Minification
gem "uglifier", "2.7.1"
